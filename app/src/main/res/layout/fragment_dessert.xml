<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tool="http://schemas.android.com/tools"
    xmlns:tools="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <CheckBox
        android:id="@+id/checkboxDessert1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Dessert 1"
        tool:ignore="HardcodedText" />

    <CheckBox
        android:id="@+id/checkboxDessert2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Dessert 2"
        tool:ignore="HardcodedText" />

    <CheckBox
        android:id="@+id/checkboxDessert3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Dessert 3"
        tool:ignore="HardcodedText" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        >

        <Button
            android:id="@+id/backBtnDessert"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Back"
            tool:ignore="ButtonStyle,HardcodedText" />

        <Button
            android:id="@+id/nextBtnDessert"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Next"
            tool:ignore="ButtonStyle,HardcodedText" />


    </LinearLayout>


</LinearLayout>
